          <div class="rel" style="left: 75px; top: 290px;"><%= list[0].shipper_country %></div>
          <div class="rel" style="left: 104px; top: 340px;"><%= list[0].declarer_name %></div>
          <div class="rel" style="left: 210px; top: 340px; background: white !important;width: 150px"><%= list[0].declarer_phone %></div>
          <div class="rel" style="left: 52px; top: 396px;width: 420px"><%= list[0].declarer_addr %></div>
          <div class="rel" style="left: 492px; top: 14px;"><%= @barcodeArr[index] %></div>
          <div class="rel" style="left: 405px; top: 46px; font-size: xx-large; font-weight: 300"><%= index + 1 %></div>
          <div class="rel" style="left: 510px; top: 52px;"><%= list[0].waybill %></div>
          <div class="rel" style="left: 420px; top: 108px; width: 10px">1</div>
          <div class="rel" style="left: 530px; top: 108px;"><%= list[0].goods_weight %></div>
          <div class="rel" style="left: 480px; top: 135px; width: 10px">1</div>
          <div class="rel" style="left: 530px; top: 135px;"><%= list[0].goods_weight %></div>

          <table class="rel" style="left: 350px; top: 184px; width: 400px">
            <tr style="height: 25px">
              <td style="width: 210px"><%= list[0].good_name %></td>
              <td style="width: 75px"><%= list[0].good_no %></td>
              <td style="width: 75px"><%= list[0].trade_country %></td>
              <td><%= list[0].declare_num * list[0].declare_price %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
<% end %>


